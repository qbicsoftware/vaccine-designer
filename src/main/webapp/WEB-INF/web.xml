<?xml version="1.0"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
  xmlns="http://java.sun.com/xml/ns/j2ee">

  <!-- Set to false only if you know what you are doing. -->
  <!-- You don't know what you're doing but want to know?
     Check this out: https://vaadin.com/docs/v7/framework/advanced/advanced-debug.html#advanced.debug -->
  <context-param>
    <param-name>productionMode</param-name>
    <param-value>true</param-value>
  </context-param>

  <display-name>Vaccine Designer Portlet</display-name>
  <servlet>
    <servlet-name>vaccine-designer-portlet</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>

    <init-param>
      <param-name>UI</param-name>
      <param-value>life.qbic.portal.portlet.MyPortletUI</param-value>
    </init-param>

  </servlet>

  <servlet-mapping>
    <servlet-name>vaccine-designer-portlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
